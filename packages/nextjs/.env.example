# PokerNFT Frontend - Environment Variables Template
# Copy this file to .env.local for local development

# =============================================================================
# WEBSOCKET SERVER CONFIGURATION
# =============================================================================

# WebSocket server URL for game connections
# Development: ws://localhost:8080
# Production: wss://your-server-name.herokuapp.com
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# =============================================================================
# STARKNET PROVIDER CONFIGURATION
# =============================================================================

# Default provider URL
NEXT_PUBLIC_PROVIDER_URL=http://127.0.0.1:5050

# URL Devnet
NEXT_PUBLIC_DEVNET_PROVIDER_URL=http://127.0.0.1:5050

# URL Sepolia
NEXT_PUBLIC_SEPOLIA_PROVIDER_URL=https://starknet-sepolia.blastapi.io/64168c77-3fa5-4e1e-9fe4-41675d212522/rpc/v0_8

# URL Mainnet
NEXT_PUBLIC_MAINNET_PROVIDER_URL=https://starknet-mainnet.blastapi.io/64168c77-3fa5-4e1e-9fe4-41675d212522/rpc/v0_8

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================

# Contract addresses (set these after deploying contracts)
NEXT_PUBLIC_POKER_CONTRACT_ADDRESS=
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# App name and branding
NEXT_PUBLIC_APP_NAME=PokerNFT
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized Poker with NFTs on Starknet

# Default table configurations
NEXT_PUBLIC_DEFAULT_BUY_IN=1000
NEXT_PUBLIC_MIN_BUY_IN=100
NEXT_PUBLIC_MAX_BUY_IN=10000

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Analytics tracking ID (if using analytics)
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry DSN for error tracking (if using Sentry)
SENTRY_DSN=

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================

# Enable development features
NEXT_PUBLIC_DEV_MODE=true

# Show debug information
NEXT_PUBLIC_DEBUG=false

# Mock WebSocket connection (for development without server)
NEXT_PUBLIC_MOCK_WS=false


# =============================================================================
# GAME ENGINE TIMERS & RULES (SERVER)
# =============================================================================

# Action timeout per player in seconds (default: 15)
ACTION_TIMEOUT_SECONDS=15

# Countdown before starting a hand when enough players are seated (default: 10)
GAME_START_COUNTDOWN_SECONDS=10

# Minimum seated players required to start a game (default: 2)
MIN_PLAYERS_TO_START=2

# Delay (in seconds) between auto-dealt streets when all players are all-in (default: 3)
STREET_DEAL_DELAY_SECONDS=3

# Delay (in seconds) after payout before ready for next hand (default: 5)
NEW_HAND_DELAY_SECONDS=5

